---
import SubPageNav from '../components/navigation/sub-page-nav.astro';
import GlobalLayout from '../layouts/global-layout.astro';
---

<GlobalLayout title="About" description="About Matthew Loughnane">
    <SubPageNav />
    <main class="max-w-4xl mx-auto my-12">
        <div class="grid grid-cols-2 gap-8">
            <div class="col-span-1">
                <h1 class="text-6xl font-bold text-right tracking-tighter">Mat<br/>Loughnane</h1>
                <h2 class="text-2xl font-bold text-right py-8 text-[#9A0D1B]">
                    just a little about me
                </h2>
            </div>
            <div class="col-span-1">
                <p class="mb-8 text-lg">
                    I'm a software developer from London, living in Dublin. I enjoy cooking, especially baking to satisfy my sweet tooth and exploring different cuisines on my travels.
                </p>
                <p class="mb-8 text-lg">
                    My favourite thing to make - Carrot Cake
                </p>
                <div class="h-[250px] overflow-hidden">
                    <img
                        class="w-full h-full object-cover"
                        src="/assets/images/about/about-profile.jpg"
                    />
                </div>
                <span class="my-8 block text-lg">
                    Learn more about my work at <a href="https://hexastudios.co" class="cursor-pointer underline hover:text-[#9A0D1B]" target="_blank">hexastudios.co</a>
                </span>
            </div>
        </div>
    </main>
</GlobalLayout>
