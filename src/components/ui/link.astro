---
export interface Props {
    href: string;
    label: string;
    variant?: 'nav' | 'inline' | 'subnav';
    class?: string;
    target?: string;
}

const {
    href,
    label,
    variant = 'nav',
    class: className = '',
    target = '',
} = Astro.props;

const baseClasses =
    variant === 'nav'
        ? 'text-white font-medium relative pb-1 group transition-colors duration-300'
        : 'text-current font-medium relative group transition-colors duration-300';

const underlineClasses =
    variant === 'nav' || variant === 'subnav'
        ? 'absolute bottom-0 left-0 w-0 h-1 bg-[#9A0D1B] group-hover:w-full transition-all duration-300 ease-out'
        : 'absolute bottom-0 left-0 w-full h-1 bg-white group-hover:bg-[#9A0D1B] transition-all duration-300 ease-out';
---

<a href={href} class={`${baseClasses} ${className}`} target={target}>
    {label}
    <span
        class={underlineClasses}
        style={variant === 'nav' ? 'bottom: -4px;' : 'bottom: -4px;'}></span>
</a>
