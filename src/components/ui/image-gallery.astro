---
import { readdir } from 'fs/promises';
import { join } from 'path';

export interface Props {
    imagePath: string;
    altText?: string;
}

const { imagePath, altText = 'Gallery image' } = Astro.props;

// console.log({ imagePath });

let publicImagePaths: string[] = [];

try {
    // Convert the imagePath to the actual file system path
    const fullPath = join(process.cwd(), 'public', imagePath);
    // console.log({ fullPath });

    // Read the directory contents
    const files = await readdir(fullPath);
    // console.log({ files });

    // Filter for image files
    const imageExtensions = [
        '.png',
        '.jpg',
        '.jpeg',
        '.gif',
        '.webp',
        '.PNG',
        '.JPG',
        '.JPEG',
        '.GIF',
        '.WEBP',
    ];
    const imageFiles = files.filter((file) =>
        imageExtensions.some((ext) =>
            file.toLowerCase().endsWith(ext.toLowerCase())
        )
    );

    // Convert to public paths
    publicImagePaths = imageFiles.map((file) => `${imagePath}/${file}`);
    // console.log({ publicImagePaths });
} catch (error) {
    console.error('Error reading image directory:', error);
}
---

{
    publicImagePaths.length > 0 && (
        <div class="image-gallery my-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {publicImagePaths.map((path, i) => (
                    <div class="aspect-square bg-red-500 overflow-hidden">
                        <img
                            src={path}
                            alt={`${altText} ${i + 1}`}
                            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 mt-0 cursor-pointer"
                            loading="lazy"
                            data-gallery-img
                            data-index={i}
                        />
                    </div>
                ))}
            </div>

            <div
                id="lightbox"
                class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90"
                data-lightbox
            >
                <button
                    class="absolute top-4 right-4 text-white text-4xl leading-none cursor-pointer z-10 hover:text-gray-300"
                    data-lightbox-close
                    aria-label="Close lightbox"
                >&times;</button>
                <button
                    class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-4xl leading-none cursor-pointer z-10 hover:text-gray-300"
                    data-lightbox-prev
                    aria-label="Previous image"
                >&#8249;</button>
                <button
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-4xl leading-none cursor-pointer z-10 hover:text-gray-300"
                    data-lightbox-next
                    aria-label="Next image"
                >&#8250;</button>
                <img
                    class="max-h-[90vh] max-w-[90vw] object-contain"
                    data-lightbox-img
                    alt={altText}
                />
            </div>
        </div>
    )
}

<script define:vars={{ publicImagePaths }}>
    const lightbox = document.querySelector('[data-lightbox]');
    const lightboxImg = document.querySelector('[data-lightbox-img]');
    const images = publicImagePaths;
    let currentIndex = 0;

    function open(index) {
        currentIndex = index;
        lightboxImg.src = images[currentIndex];
        lightbox.classList.remove('hidden');
        lightbox.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function close() {
        lightbox.classList.add('hidden');
        lightbox.classList.remove('flex');
        document.body.style.overflow = '';
    }

    function next() {
        currentIndex = (currentIndex + 1) % images.length;
        lightboxImg.src = images[currentIndex];
    }

    function prev() {
        currentIndex = (currentIndex - 1 + images.length) % images.length;
        lightboxImg.src = images[currentIndex];
    }

    document.querySelectorAll('[data-gallery-img]').forEach((img) => {
        img.addEventListener('click', () => {
            open(Number(img.dataset.index));
        });
    });

    document.querySelector('[data-lightbox-close]')?.addEventListener('click', close);
    document.querySelector('[data-lightbox-next]')?.addEventListener('click', next);
    document.querySelector('[data-lightbox-prev]')?.addEventListener('click', prev);

    lightbox?.addEventListener('click', (e) => {
        if (e.target === lightbox) close();
    });

    document.addEventListener('keydown', (e) => {
        if (lightbox?.classList.contains('hidden')) return;
        if (e.key === 'Escape') close();
        if (e.key === 'ArrowRight') next();
        if (e.key === 'ArrowLeft') prev();
    });
</script>
