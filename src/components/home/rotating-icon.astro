<!-- Rotating Icon Circle -->
<div
    class="w-16 h-16 rounded-full flex items-center justify-center bg-[#9A0D1B] icon-container cursor-pointer mb-3"
>
    <div class="relative w-8 h-8">
        <!-- Plane Icon -->
        <svg
            class="icon-item absolute inset-0 w-8 h-8 text-white transition-all duration-500"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path
                d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"
            ></path>
        </svg>
        <!-- Hamburger Icon -->
        <svg
            class="icon-item absolute inset-0 w-8 h-8 text-white transition-all duration-500 opacity-0"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M12 16H4a2 2 0 1 1 0-4h16a2 2 0 1 1 0 4h-4.25"></path>
            <path d="M5 12a2 2 0 0 1-2-2 9 7 0 0 1 18 0 2 2 0 0 1-2 2"></path>
            <path
                d="M5 16a2 2 0 0 0-2 2 3 3 0 0 0 3 3h12a3 3 0 0 0 3-3 2 2 0 0 0-2-2q0 0 0 0"
            ></path>
            <path d="m6.67 12 6.13 4.6a2 2 0 0 0 2.8-.4l3.15-4.2"></path>
        </svg>
        <!-- Code Icon -->
        <svg
            class="icon-item absolute inset-0 w-8 h-8 text-white transition-all duration-500 opacity-0"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="m16 18 6-6-6-6"></path>
            <path d="m8 6-6 6 6 6"></path>
        </svg>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const container = document.querySelector('.icon-container');
        if(!container) return
        const icons = container.querySelectorAll('.icon-item');
        let currentIcon = 0;
        let intervalId;

        function showNextIcon() {
            icons[currentIcon].style.opacity = '0';
            icons[currentIcon].style.transform = 'rotate(180deg)';
            currentIcon = (currentIcon + 1) % icons.length;
            icons[currentIcon].style.opacity = '1';
            icons[currentIcon].style.transform = 'rotate(0deg)';
        }

        function startRotation() {
            intervalId = setInterval(showNextIcon, 2000);
        }

        function stopRotation() {
            clearInterval(intervalId);
        }

        // Start the rotation
        startRotation();

        // Stop on hover, resume on mouse leave
        container.addEventListener('mouseenter', stopRotation);
        container.addEventListener('mouseleave', startRotation);
    });
</script>
