---
import RotatingIcon from '../home/rotating-icon.astro';
import Link from '../ui/link.astro';

const categories = [
    { label: 'Home', href: '/' },
    { label: 'About', href: '/about' },
    { label: 'Posts', href: '/posts' },
    // { label: 'Travel', href: '/travel' },
    // { label: 'Food', href: '/food' },
    // { label: 'Code', href: '/code' },
];
---

<footer class="bg-[#2d0808] py-32 px-8">
    <div class="max-w-7xl mx-auto flex justify-between items-end">
        <!-- Left side - Categories -->
        <div class="flex flex-col space-y-6 mb-8">
            {
                categories.map((category) => (
                    <Link
                        href={category.href}
                        label={category.label}
                        variant="nav"
                        class="text-md"
                    />
                ))
            }
        </div>

        <!-- Right side - Large Name -->
        <div>
            <div class="text-right">
                <h2
                    class="text-6xl md:text-8xl font-bold text-white tracking-tighter leading-none"
                >
                    Mat<br />Loughnane
                </h2>
            </div>
            <div class="flex flex-row justify-end pt-12 gap-8">
                <Link
                    href={'https://hexastudios.co'}
                    label={`hexa studios`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
                <Link
                    href={'https://github.com/matloughnane'}
                    label={`github`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
                <Link
                    href={'https://linkedin.com/in/matloughnane'}
                    label={`linkedin`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
            </div>
        </div>
    </div>
</footer>
