---
import RotatingIcon from '../home/rotating-icon.astro';
import Link from '../ui/link.astro';
import Grainient from '../Grainient.tsx';

const categories = [
    { label: 'Home', href: '/' },
    { label: 'About', href: '/about' },
    { label: 'Posts', href: '/posts' },
    // { label: 'Travel', href: '/travel' },
    // { label: 'Food', href: '/food' },
    // { label: 'Code', href: '/code' },
];
---

<footer class="py-16 md:py-32 px-8 relative">
    <div class="absolute inset-0 -z-10">
        <Grainient
            client:load
            className="h-full w-full"
            color1="#33151e"
            color2="#b21f1f"
            color3="#664265"
        />
    </div>
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row md:justify-between md:items-end gap-12 md:gap-0">
        <!-- Left side / Top on mobile - Categories -->
        <div class="flex flex-col space-y-4 md:space-y-6 order-1 md:order-1">
            {
                categories.map((category) => (
                    <Link
                        href={category.href}
                        label={category.label}
                        variant="nav"
                        class="text-md"
                    />
                ))
            }
        </div>

        <!-- Right side / Bottom on mobile - Large Name -->
        <div class="order-2 md:order-2">
            <div class="text-left md:text-right">
                <h2
                    class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-white tracking-tighter leading-none"
                >
                    Mat<br />Loughnane
                </h2>
            </div>
            <div class="flex flex-row justify-start md:justify-end pt-8 md:pt-12 gap-4 md:gap-8">
                <Link
                    href={'https://hexastudios.co'}
                    label={`hexa studios`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
                <Link
                    href={'https://github.com/matloughnane'}
                    label={`github`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
                <Link
                    href={'https://linkedin.com/in/matloughnane'}
                    label={`linkedin`}
                    target="_blank"
                    variant="nav"
                    class="text-md"
                />
            </div>
        </div>
    </div>
</footer>
